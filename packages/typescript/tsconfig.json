{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "declaration": true,
    "outDir": "build",
    "sourceMap": true,
    "target": "es6",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
