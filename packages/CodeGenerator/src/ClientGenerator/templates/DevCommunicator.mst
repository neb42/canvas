import * as React from 'react';
import io from 'socket.io-client';
import { useLocation } from 'react-router-dom';

const DevCommunicator = () => {
  const serverSocket = React.useMemo(() => io('http://localhost:3001'), []);
  const location = useLocation();
  
  React.useEffect(() => {
    serverSocket.emit('navigate-page', { url: location.pathname });
  }, [location.pathname]);

  return null;
};

export default DevCommunicator